<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
         {% block stylesheets %}
            <link rel="stylesheet" href="/css/style.css">
        {% endblock %}
    </head>
    <body class="body">
        <nav class="navbar">
            <ul>
            <li><a href="{{ path('index')}}">Home</a></li>
            <li><a href="{{ path('ingredient_index')}}">Ingredients</a></li>
            <li><a href="{{ path('recipe_index')}}">Recipes</a></li>
            </ul>
            <ul>
            {% if app.user %}
                    <li><a href="{{ path('profil')}}">My profil</a></li>
                    <li><a href="{{ path('app_logout')}}">Logout</a></li>
                {% else %}
                    <li><a href="{{ path('app_register')}}">Register</a></li>
                    <li><a href="{{ path('app_login')}}">Login</a></li>
                {% endif %}
            </ul>
        </nav>
        <div class="main">
        {% block body %}{% endblock %}
        </div>
    </body>
</html>
